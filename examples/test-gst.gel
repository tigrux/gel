
(require Gtk)
(require Gst)

((. Gst init))

(def sample "/usr/share/example-content/Ubuntu_Free_Culture_Showcase/Josh Woodward - Swansong.ogg")

(def player ((. Gst ElementFactory make) "playbin2" "player"))
(set player "uri" (+ "file://" sample))
((. player set-state) (. Gst State playing))

(def bus ((. player get-bus)))
((. bus add-signal-watch))
(connect bus "message::eos" (. Gtk main-quit))

((. Gtk main))

