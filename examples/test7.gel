
(function Person (name age)
    (define self {})
    (append self
        "name" name
        "age" age
        "greet"
            (function (name-of-person)
                (print "Nice to meet you" name-of-person)
                (print "I am" (get self "name"))
            )
        "set"
            (function (attr value)
                (case attr
                    ("age")
                        (do
                            (set self "age" value)
                            (print "Now I am" value "years old")
                        )
                    #else
                        (print "I don't think you can change my" attr)
                )
            )
    )
    (function (s)
        (get self s)
    )
)

(define mary (Person "Maria" 35))

(print "My name is" (mary "name") "and I'm" (mary "age"))
( (mary "greet") "Hanna")

( (mary "set") "age" 37)
(mary "age")

( (mary "set") "name" "Boris")

